#pnlLegendContent
{
  width: 100%;
  height: 100%;
}

#cmdRefreshMap
{
 left: 10px;
 top: 2px;
 right: auto;
 bottom: auto;
}

#pnlLegendScroll
{
  left: 10px;
  top: 18px;
  right: 10px;
  bottom: 10px;
  border: solid 1px #C9C9C9;
   behavior: url(Styles/PIE.htc);
  -webkit-box-shadow: 0 1px 1px rgba(0,0,0,0.15);
  -moz-box-shadow: 0 1px 1px rgba(0,0,0,0.15);
  box-shadow: 0 1px 1px rgba(0,0,0,0.15);
  background-color: White;
  overflow: auto; 
}

.LegendTop
{
  left: 8px;
  top: 10px;
}

.LegendEntry, .LegendHeader, .LegendContent, .LegendClass
{
  position: relative;
}

.LegendExpander, .LegendVisibility, .LegendSwatch
{
  display: inline-block;
}

.LegendExpander, .LegendVisibility, .LegendName, .LegendSwatch, .LegendClassName
{
  vertical-align: middle;
}

.LegendEntry
{
}

.LegendHeader
{
  margin-bottom: 4px;
}

.LegendExpander
{
  margin-right: 5px;
  background-image: url(../Images/UI/Expand.png);
  width: 11px;
  height: 11px;
}

.LegendExpander.Expanded
{
  background-position: -11px 0px;
}

.LegendExpander.Collapsed
{
  background-position: 0px 0px;
}

.LegendExpander.Empty
{
  background-image: none;
}

.LegendVisibility
{
  width: 14px;
  height: 14px;
  margin-top: 1px;
  margin-right: 5px;
}

.LegendContent
{
  margin-left: 15px;
  margin-bottom: 4px;
}

.LegendClass
{
  margin-bottom: 1px;
}

.LegendSwatch
{
  border: none;
  margin-left: 10px;
  margin-right: 4px;
}

